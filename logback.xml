<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <!-- encoders are assigned the type
             ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
        <encoder>
            <pattern>%date [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="warn">
        <appender-ref ref="STDOUT" />
    </root>

    <logger name="io.pedestal" level="warn"/>
    <logger name="pc4" level="debug"/>
    <logger name="pc4.fulcro-server" level="warn"/>
    <logger name="com.eldrix" level="warn"/>
    <logger name="pc4.graph.rsdb" level="debug"/>
    <logger name="org.eclipse.jetty.server.Server" level="warn"/>

</configuration>
